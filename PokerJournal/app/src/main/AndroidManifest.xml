<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ethan.pokerjournal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        // Main Activity + Launcher
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        // Game Form Page
        <activity android:name=".GameFormActivity" />

        // Game Details Page
        <activity android:name=".GameDetailActivity"></activity>

        // Game Edit Form Page
        <activity android:name=".GameEditActivity"></activity>

        // Bank Transaction Form Page
        <activity android:name=".BankFormActivity" />

        // Bank Details Page
        <activity android:name=".BankDetailActivity"></activity>

        // Bank Edit Form Page
        <activity android:name=".BankEditActivity"></activity>

    </application>

</manifest>
