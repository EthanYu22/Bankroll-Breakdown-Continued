<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ethan.pokerjournal.LiveSessionTracker">

    // Toolbar Detailing
    <android.support.design.widget.AppBarLayout
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        // Set Up Toolbar
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_scrollFlags="scroll|enterAlways"
            android:background="?attr/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"/>
    </android.support.design.widget.AppBarLayout>

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <Button
        android:id="@+id/timerStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timer"
        android:layout_toLeftOf="@id/timerPause"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:text="Start"
        android:background="@color/green"
        android:onClick="startTimer"/>

    <Button
        android:id="@+id/timerPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/timer"
        android:layout_marginTop="25dp"
        android:text="Pause"
        android:background="@color/blue"
        android:onClick="pauseTimer"/>

    <Button
        android:id="@+id/timerReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/timerPause"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/timer"
        android:layout_marginTop="25dp"
        android:text="Reset"
        android:background="@color/red"
        android:onClick="resetTimer"/>

    // Display "Location:"
    <TextView
        android:id="@+id/textLiveBuyInTotal"
        android:text="Current Buy In Total:"
        android:textSize="20dp"
        android:layout_below="@id/timerPause"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/textAddOn"
        android:text="Add On ($)"
        android:inputType="text|textAutoComplete"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_below="@+id/textLiveBuyInTotal"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="200dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"/>

    <EditText
        android:id="@+id/editAddOn"
        android:inputType="number|numberDecimal"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_below="@+id/textLiveBuyInTotal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginStart="125dp"
        android:layout_marginTop="35dp"/>

    // Display Form for Location Under textLocation
    <Button
        android:id="@+id/buttonAddOnRebuy"
        android:text="Rebuy"
        android:onClick="onClickAddOnRebuy"
        android:layout_below="@+id/textLiveBuyInTotal"
        android:ems="5"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:id="@+id/textLiveCashOut"
        android:text="Cash Out ($):"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editAddOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/editLiveCashOut"
        android:inputType="number|numberDecimal"
        android:textSize="15dp"
        android:layout_below="@+id/textLiveCashOut"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:text="Trash Live Session"
        android:id="@+id/buttonDeleteLiveSession"
        android:onClick="onClickDeleteLiveSession"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonSubmitLiveSession"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

    // Submit Button at Bottom of Page
    <Button
        android:text="Submit Live Session"
        android:id="@+id/buttonSubmitLiveSession"
        android:onClick="onClickSubmitLiveSession"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"/>

</RelativeLayout>